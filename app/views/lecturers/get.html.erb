<h1  align="center">Dozenten</h1>

	<table border="1" align="center" cellspacing="5" cellpadding="5" style="border-collapse:collapse;">
		<tr>	
			<td bgcolor="grey" align="center"><font color="white"><b>Vorname</b></td>
			<td bgcolor="grey" align="center"><font color="white"><b>Nachname</b></td>
			<td bgcolor="grey" align="center"></td>
			<td bgcolor="grey" align="center"></td>
		</tr>
			<% @lecturers.each do |lecturer| %>
		<tr>	
			<td align="center"><%= lecturer.firstname %></td>
			<td align="center"> <%= lecturer.lastname %></td>
			<td><%= link_to"delete",lecturer_path(lecturer),:method=>:delete%></td>
			<td><%= link_to"edit",lecturer_path(lecturer),:method=>:get%></td>
		</tr>
		<% end %>
		
	</table>

	<h2  align="center">Neue Dozenten</h2>
		<%= form_for @lecturer do |f| %>
			<p align="center">
			<%= f.label :firstname %>: <%= f.text_field :firstname %></br>
			<%= f.label :lastname %>: <%= f.text_field :lastname %></br>
			<%= f.submit "Save" %>
			</p>
		<% end %>
	