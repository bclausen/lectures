<h1 align="center"> Anmeldung </h1>

<table border="1" align="center" cellspacing="5" cellpadding="5" style="border-collapse:collapse;">
		<tr>	
			<td bgcolor="grey" align="center" colspan="5"><font color="white"><b>Angelegte Benutzer</b></td>
		</tr>
		<tr>
			<!-- Die User sollen in einer Tabelle mit 5 Spalten dargestellt werden -->
			<!-- Nach jeweils 5 Spalten wird eine neue Zeile erstellt. -->
			<% spalte = 0 %> 	
			<% @users.each do |user| %>
				<% if spalte%5 != 0 then %>
					<td align="center"><%= user.nickname %></td>
				<% else %>
						</tr>
						<tr>
						<td align="center"><%= user.nickname %></td>
				<% end %>
				<% spalte = spalte + 1 %>
		<% end %>
		</tr>
	</table>
	
